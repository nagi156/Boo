
<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>
    
  <div class="row">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fa fa-user-gear"></i>
    <% end %>
  </div>
    <h2 class="m-3">New book</h2>
    <div class= "new_book">
      <%= form_with model: book do |f| %>
        <div class="row">
          <div class="col">
            <div class="form_group">
              <p for="book_title">Title</p>
              <%= f.text_field :title %>
            </div>
          </div>
          <div class="col">
            <div class= "form_group">
              <p for="book_body">Opinion</p>
              <%= f.text_field :body %>
            </div>
          </div>
        </div>
            
        <div class= "form_group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
</div>