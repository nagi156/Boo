<p id="notice">
  <%= flash[:notice] %>
</p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <!--部分テンプレート貼る-->
    <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fa fa-user-gear"></i>
          <% end %>
        </div>
        <form action="/books" method="post">
          <h2 class="m-3">New book</h2>
          <div class= "new_book">
            <%= form_with model: @book do |f| %>
              <div class="row">
                <div class="col">
                  <div class="form_group">
                      <p for="book_title">Title</p>
                      
                        <%= f.text_field :title %>
                  </div>
                </div>
                  
                  <div class="col">
                    <div class= "form_group">
                      <p for="book_body">Opinion</p>
                        <%= f.text_field :body %>
                    </div>
                  </div>
                </div>
                  
                  <div class= "form_group">
                    <%= f.submit 'Create Book', class: "btn btn-success" %>
                  </div>
            <% end %>
          </div>
        </form>
      </div>
      <!--ここまでユーザーinfo-->
      
      <!--一覧画面-->
      <div class="col-md-8 offset-md-1">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th scopre="col">Title</th>
              <th scopre="col">Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(80,80) %></td>
              <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              
              <td><%= book.body %></td>
              
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <!--ここまで一覧画面-->
  </div>
</div>