<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/info', book: @book, user: @user %><!--部分テンプレート貼る-->
     <!--ユーザーbook詳細-->
     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th scopre="col">Title</th>
            <th scopre="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag book.user.get_profile_image(80,80) %>
              </td>
              <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!--ここまで一覧画面-->
  </div>
</div>

