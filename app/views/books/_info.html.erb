<% if @book.errors.any? %>
<div id="errors">
  <h2><%= pluralize(@book.errors.count,"errors") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
</div>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        <table>
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        
        <div class="row">
          <a class="btn btn-outline-secondary btn-block">
            <%= link_to edit_user_path(current_user) do %>
              <i class="fa fa-user-gear"></i>
            <% end %>
          </a>
        </div>
        
        <h2 class="m-3">New book</h2>
        <div class= "new_book">
          <div class="row">
            <div class="col">
              <div class="form_group">
                <label for="book_title">Title</label>
                <input class="form-controll book_title" type="text" name="book[title]" id="book_title">
              </div>
            </div>
            
            <div class="col">
              <div class= "form_group">
                <label for="book_body">Opinion</label>
                <textarea class="form-controll book_body" type="text" name="book[body]" id="book_body"></textarea>
              </div>
            </div>
          </div>
            
            <div class= "form_group">
              <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
            </div>
        </div>
      </div>