<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render'info', book: @book.current_user %><!--部分テンプレート貼る-->
    <div class="col-md-8 offset-md-1"><!--ここからユーザー一覧-->
    <h1>Users</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th scopre="col">image</th>
          <th scopre="col">name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td>
              <%= link_to user_path(user) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div><!--ここまでユーザー一覧-->
  </div>
</div>