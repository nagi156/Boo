<div class="container px-5 px-sm-0">
  <%= render 'layouts/errors', obj: @user %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2>User info</h2>
      <%= render 'form', book: @new_book%>
    </div>
   <!--book詳細-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td><%= image_tag @book.user.get_profile_image, size: "80x80" %><br>
              <%= link_to user_path(@user.id) do %>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <td id= "favorite_btn_<%= @book.id %>">
              <%= render 'favorites/btn', book: @book %>
            </td>
            <td id="comment_count">コメント数：<%= @book.book_comments.count %></td>
            <% if @user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger btn-sm" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div id= "comment_index">
        <%= render 'book_comments/index', book: @book %>
      </div>
        <%= render 'book_comments/form', book: @book, book_comment: @book_comment %>
    </div>

  </div>
</div>