<div class="container px-5 px-sm-0">
  <div id= "errors_message">
    <% if @book.errors.any? %>
      <div id="errors">
        <h3><%= pluralize(@book.errors.count,"errors") %> prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="row">
    <%= render'info', book: @book, user: @user %><!--部分テンプレート貼る-->
    <!--ここから一覧画面-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= render 'index', books: @books %>
    </div>
  </div>
</div>