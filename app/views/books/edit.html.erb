<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div id="errors">
        <% if @book.errors.any? %>
        <h2><%= pluralize(@book.errors.count,"errors") %> prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>

      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
        <div class="form-group">
          <p for="book_title">Title</p>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class= "form-group">
          <p for="book_body">Opinion</p>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class= "form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>

      <%= link_to "Show", book_path(@book) %> |

      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>