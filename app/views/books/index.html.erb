<p id="notice">
  <%= flash[:notice] %>
</p>

<% if book.errors.any? %>
<div id="errors">
  <h2><%= pluralize(book.errors.count,"errors") %> prohibited this book from being saved:</h2>
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render'info', book: @book %><!--部分テンプレート貼る-->
    <div class="col-md-8 offset-md-1"><!--ここから一覧画面-->
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th scopre="col">Title</th>
            <th scopre="col">Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!--ここまで一覧画面-->
    </div>
</div>