<h1>Books</h1>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th scopre="col">Title</th>
      <th scopre="col">Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(80,80) %><br>
            <%= @book.user.name %>
        </td>
        <td>
          <%= link_to book_path(@book) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %></td>
        <td>
          <%= link_to edit_book_path(@book), class: "btn btn-success" do %>
            Edit
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" do %>
            Destroy
          <% end %>
        </td>
      </tr>
  </tbody>
</table>